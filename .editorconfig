root = true

[*.cs]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Bracing style: K&R (brace on same line)
csharp_new_line_before_open_brace = none

# Optional fine-grained control (redundant with above, but explicit)
csharp_new_line_before_open_brace_types = false
csharp_new_line_before_open_brace_methods = false
csharp_new_line_before_open_brace_accessors = false
csharp_new_line_before_open_brace_anonymous_methods = false
csharp_new_line_before_open_brace_control_blocks = false
csharp_new_line_before_open_brace_anonymous_types = false
csharp_new_line_before_open_brace_object_collection_array_initializers = false
csharp_new_line_before_open_brace_lambdas = false

# Other optional style rules
csharp_indent_block_contents = true
csharp_indent_braces = false
csharp_indent_switch_labels = true
